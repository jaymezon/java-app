pipeline {
  agent any
  stages{
    stage('Delete image if exist'){
      steps{
        sh 'docker rmi jaymezon/java-docker:latest'
      }
    }
    stage('Create container image'){
      steps{
        sh 'docker build --tag jaymezon/java-docker:latest .'
      }
    }
    stage('Generate SBOM'){
      steps{
        sh 'grype jaymezon/java-docker:latest --scope AllLayers'
      }
    }
  }
}

